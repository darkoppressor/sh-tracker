<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.cheeseandbacon.shtracker">

    <!-- Normal permissions -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Dangerous permissions -->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-feature android:name="android.hardware.screen.portrait" android:required="true" />
    <uses-feature android:name="android.hardware.touchscreen" android:required="false" />
    <uses-feature android:name="android.hardware.telephony" android:required="false" />
    <uses-feature android:name="android.software.autofill" android:required="false" />

    <application
        tools:ignore="GoogleAppIndexingWarning"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Main"
        android:appCategory="productivity">

        <activity
            android:name=".day.DayActivity"
            android:screenOrientation="portrait"
            android:supportsPictureInPicture="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".event.EventActivity"
            android:screenOrientation="portrait"
            android:supportsPictureInPicture="true" />

        <activity android:name=".event.SelectReasonActivity"
            android:screenOrientation="portrait"
            android:supportsPictureInPicture="true" />

        <activity android:name=".event.CustomizeReasonActivity"
            android:screenOrientation="portrait"
            android:supportsPictureInPicture="true" />

        <activity android:name=".reasonTemplates.AddReasonTemplateActivity"
            android:screenOrientation="portrait"
            android:supportsPictureInPicture="true" />

        <activity android:name=".event.SelectActionActivity"
            android:screenOrientation="portrait"
            android:supportsPictureInPicture="true" />

        <activity android:name=".event.CustomizeActionActivity"
            android:screenOrientation="portrait"
            android:supportsPictureInPicture="true" />

        <activity android:name=".actionTemplates.AddActionTemplateActivity"
            android:screenOrientation="portrait"
            android:supportsPictureInPicture="true" />

        <activity android:name=".reasonTemplates.ReasonTemplatesActivity"
            android:screenOrientation="portrait"
            android:supportsPictureInPicture="true" />

        <activity android:name=".actionTemplates.ActionTemplatesActivity"
            android:screenOrientation="portrait"
            android:supportsPictureInPicture="true" />

    </application>

</manifest>
